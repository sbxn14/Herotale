@model Herotale.ViewModels.StoryViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Herotale</title>
    
    @Scripts.Render("~/Bundles/Jquery")
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/Scripts/Caret with Blink.js")

    <div class="buttons">
        <a href="" class="reset">Reset</a>
        <a href="/Home/Logout" class="logout">Logout</a>
    </div>
</head>
<body>
    <h1 style="font-size: 25px">@Model.Str.Sgt.Title</h1>

    <p class="gametext" style="white-space: pre-line;">@Model.Str.Sgt.Text</p>
    
    <div class="border">
        <div id="terminal" onclick="$('setter').focus();">
            @using (Html.BeginForm("Index","Home"))
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(model => model.Inp.Message, new { @class = "regbox", type="text", autocomplete = "off", height = "30", autofocus = "autofocus", id = "setter", onkeydown = "writeit(this, event);moveIt(this.value.length, event)", onkeyup = "writeit(this, event)", onkeypress = "writeit(this, event)" })
			}
            <div id="getter">
                <span id="writer"></span><b class="cursor" id="cursor">█</b>
            </div>
        </div>
    </div>
</body>
</html>